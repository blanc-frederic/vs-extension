{
	"name": "vs-phpcompanion",
	"displayName": "VS PHP Companion",
	"version": "1.0.0",
	"description": "VS PHP Companion",
	"icon": "resources/icon.png",
	"author": "Fred Blanc <findel@free.fr>",
	"publisher": "blanc-frederic",
	"engines": {
		"vscode": "^1.34.0"
	},
	"activationEvents": [
		"onCommand:phpcompanion.generateClass",
		"onCommand:phpcompanion.generateInterface",
		"onCommand:phpcompanion.insertNamespace",
		"onCommand:phpcompanion.generateTrait",
		"onCommand:phpcompanion.newPHPClass",
		"onCommand:phpcompanion.newPHPInterface",
		"onCommand:phpcompanion.newPHPTrait"
	],
	"main": "./extension",
	"contributes": {
		"commands": [
			{
				"command": "phpcompanion.insertNamespace",
				"title": "Insert PHP Namespace"
			},
			{
				"command": "phpcompanion.generateClass",
				"title": "Generate PHP Class"
			},
			{
				"command": "phpcompanion.generateInterface",
				"title": "Generate PHP Interface"
			},
			{
				"command": "phpcompanion.generateTrait",
				"title": "Generate PHP Trait"
			},
			{
				"command": "phpcompanion.newPHPClass",
				"title": "New PHP Class"
			},
			{
				"command": "phpcompanion.newPHPInterface",
				"title": "New PHP Interface"
			},
			{
				"command": "phpcompanion.newPHPTrait",
				"title": "New PHP Trait"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "phpcompanion.newPHPClass",
					"when": "explorerResourceIsFolder"
				},
				{
					"command": "phpcompanion.newPHPInterface",
					"when": "explorerResourceIsFolder"
				},
				{
					"command": "phpcompanion.newPHPTrait",
					"when": "explorerResourceIsFolder"
				}
			],
			"editor/context": [
				{
					"command": "phpcompanion.insertNamespace",
					"when": "resourceLangId == php"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "PHP Companion",
			"properties": {
				"phpcompanion.vendor": {
					"type": "string",
					"default": null,
					"description": "Specifies default vendor if not extracted from composer.json"
				},
				"phpcompanion.detectTestCase": {
					"type": "boolean",
					"default": true,
					"description": "Extends PHPUnit TestCase for generated classes with \"Test\" suffix"
				}
			}
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/blanc-frederic/vs-extension.git"
	}
}