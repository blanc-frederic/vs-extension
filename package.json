{
	"name": "vs-phpcompanion",
	"displayName": "PHP Companion",
	"version": "1.0.0",
	"description": "Generate code (php >=7.4) for classes, interfaces and traits",
	"icon": "resources/icon.png",
	"author": "Fred Blanc <findel@free.fr>",
	"publisher": "blanc-frederic",
	"engines": {
		"vscode": "^1.34.0"
	},
	"activationEvents": [
		"onCommand:phpcompanion.insertNamespace",
		"onCommand:phpcompanion.newPHPClass",
		"onCommand:phpcompanion.newPHPInterface",
		"onCommand:phpcompanion.newPHPTrait"
	],
	"main": "./extension",
	"contributes": {
		"commands": [
			{
				"command": "phpcompanion.insertNamespace",
				"title": "Insert Namespace"
			},
			{
				"command": "phpcompanion.newPHPClass",
				"title": "New PHP Class"
			},
			{
				"command": "phpcompanion.newPHPInterface",
				"title": "New PHP Interface"
			},
			{
				"command": "phpcompanion.newPHPTrait",
				"title": "New PHP Trait"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "phpcompanion.insertNamespace",
					"when": "resourceLangId == php"
				}
			],
			"explorer/context": [
				{
					"command": "phpcompanion.newPHPClass",
					"when": "explorerResourceIsFolder",
					"group": "navigation@7"
				},
				{
					"command": "phpcompanion.newPHPInterface",
					"when": "explorerResourceIsFolder",
					"group": "navigation@8"
				},
				{
					"command": "phpcompanion.newPHPTrait",
					"when": "explorerResourceIsFolder",
					"group": "navigation@9"
				}
			],
			"editor/context": [
				{
					"command": "phpcompanion.insertNamespace",
					"when": "resourceLangId == php"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "PHP Companion",
			"properties": {
				"phpcompanion.composerJson": {
					"type": "string",
					"default": "composer.json",
					"description": "Path to composer.json from workspace rootdir"
				},
				"phpcompanion.vendor": {
					"type": "string",
					"default": null,
					"description": "Specifies default vendor if not extracted from composer.json"
				},
				"phpcompanion.detectTestCase": {
					"type": "boolean",
					"default": true,
					"description": "Extends PHPUnit TestCase for generated classes with \"Test\" suffix"
				}
			}
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/blanc-frederic/vs-phpcompanion.git"
	}
}